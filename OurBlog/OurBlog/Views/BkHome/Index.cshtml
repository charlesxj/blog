@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge;chrome=1;" />
    <meta name="viewport" content="width=device-width" />

    <title>欢迎回来</title>
    @Styles.Render("~/Styles/bkhome", 
                   "~/Styles/easyui")
    @Scripts.Render("~/bundles/easyui",
                    "~/bundles/SelfDefineJS")

</head>
<body>
    <div id="Header">
        <div id="BkHeader">
            <div id="HeaderLeft">Our-Blog-后台管理系统</div>
            <div id="HeaderRight">
                <div id="TimeShowDiv"></div>
                <div id="OtherInfosDiv">
                    <span>
                        退出系统：
                        <a href="javascript:void(0)" onclick="closeWindow();return false; ">
                            <img src="~/images/logout.png" alt="退出系统" />
                        </a>
                    </span>
                    <span>当前登陆用户：@ViewBag.Usrs</span>
                </div>
            </div>
        </div>
    </div>
    <div id="Content">
        <div id="BkContent">
            <div class="easyui-layout" style="width: 1000px; height: 1000px;">
                <div data-options="region:'west',split:true,maxWidth:200" title="操作列表" style="width: 200px;">
                    <div class="easyui-accordion" data-options="fit:false,border:false">
                        <div title="系统设置" data-options="selected:true" style="padding: 10px;">
                            <ul class="ulStyle">
                                <li><a href="javascript:void();" onclick="InfoMgList('登录用户管理', '#')">登录用户管理</a></li>
                                <li><a href="javascript:void();" onclick="InfoMgList('基础信息管理', '#')">基础信息管理</a></li>
                                <li><a href="javascript:void();">菜单管理</a></li>
                                <li><a href="javascript:void();">权限管理(预留)</a></li>
                            </ul>
                        </div>
                        <div title="文章设置" data-options="selected:true" style="padding: 10px;">
                            <ul class="ulStyle">
                                <li><a href="javascript:void();" onclick="InfoMgList('文章分类管理', '#')">文章分类管理</a></li>
                                <li><a href="javascript:void();" onclick="InfoMgList('文章签名管理', '#')">文章签名管理</a></li>
                                <li><a href="javascript:void();">页签管理</a></li>
                                <li><a href="javascript:void();">文章内容管理</a></li>
                            </ul>
                        </div>
                        <div title="评论设置" data-options="selected:true" style="padding: 10px;">
                            <ul class="ulStyle">
                                <li><a href="javascript:void();" onclick="InfoMgList('文章的评论管理', '#')">文章的评论管理</a></li>
                                <li><a href="javascript:void();" onclick="InfoMgList('黑名单管理', '#')">黑名单管理</a></li>
                                <li><a href="javascript:void();">敏感词过滤</a></li>
                            </ul>
                        </div>
                        <div title="图片设置" data-options="selected:true" style="padding: 10px;">
                            <ul class="ulStyle">
                                <li><a href="javascript:void();" onclick="InfoMgList('图片管理', '#')">图片管理</a></li>
                                <li><a href="javascript:void();" onclick="InfoMgList('设置轮播图片', '#')">设置轮播图片</a></li>
                            </ul>
                        </div>

                        <div title="访客行为分析" style="padding: 10px">
                            <ul class="ulStyle">
                                <li><a href="javascript:void(0);" onclick="InfoMgList('访客统计','#')">访客统计</a></li>
                                @* <li>客户邮箱列表统计</li>
                                    <li>访客统计</li>*@
                            </ul>
                        </div>
                    </div>
                </div>
                <div data-options="region:'center',title:'天行健--君子以自强不息',iconCls:'icon-ok'" style="width: 800px;">
                    <div id="tt" class="easyui-tabs" data-options="fit:true,border:false,plain:true">
                        <div title="首页提示" style="padding: 10px">
                            <div id="homeLeft">
                                <img style="width: 400px; height: 380px;" src="~/images/systemImg/smile.jpg" />
                            </div>
                            <div>
                                当前登陆时，您还有【 @ViewBag.count 】条客户信息未处理！
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/bkhome")
</body>
</html>
