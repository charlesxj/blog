@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Our-Blog</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge;chrome=1;" />

